<% include ../partials/header %>

<div class="container">
    <div class="row">
    <h2 class="text-center" style="padding:20px"><strong>Add A New Site</strong></h2>
        <div style="width:30% ; margin: 0 auto">
            <form action="/sites" method="POST">
                <div class=form-group>
                    <input class="form-control" type="text" name="name" placeholder="Site name goes here"></input>                    
                </div>
                <div class=form-group>
                    <input class="form-control" type="text" name="image" placeholder="Image URL goes here"></input>    
                </div>
                <div class=form-group>
                    <input class="form-control" type="number" name="price" placeholder="price" min="0.01" step="0.01" </input>    
                </div>
                <div class=form-group>
                    <!--<textarea name="comment" form="usrform">Enter text here...</textarea>-->
                    <textarea class="form-control" type="text" name="description" placeholder="Image description goes here"></textarea>    
                </div>
                
                <div class=form-group>
                    <input class="btn btn-primary btn-lg btn-block" type="submit"></input>    
                </div>
            </form>
            <a style="align: center"href="/sites">Back to sites</a>
        </div>
    <br></br>
    </div>
</div>

<% include ../partials/footer %>

