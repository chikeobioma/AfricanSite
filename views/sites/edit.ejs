<% include ../partials/header %>

<div class="container">
    <div class="row">
    <h2 class="text-center" style="padding:20px"><strong>Edit <%=site.name%></strong></h2>
        <div style="width:30% ; margin: 0 auto">
            <form action="/sites/<%= site._id %>?_method=PUT" method="POST">
                <div class=form-group>
                    <input class="form-control" type="text" name="site[name]" value="<%=site.name%>"></input>                    
                </div>
                <div class=form-group>
                    <input class="form-control" type="text" name="site[image]" value="<%=site.image%>"></input>    
                </div>
                <div class=form-group>
                    <input class="form-control" type="number" name="site[price]" value="<%=site.price%>" min="0.01" step="0.01"></input>    
                </div>
                <div class=form-group>
                    <input class="form-control" type="text" name="site[description]" value="<%=site.description%>"></input>    
                </div>
                <div class=form-group>
                    <input class="btn btn-primary btn-lg btn-block" type="submit"></input>    
                </div>
            </form>
            <a style="align: center"href="/sites">Back to sites</a>
        </div>
    <br></br>
    </div>
</div>

<% include ../partials/footer %>
